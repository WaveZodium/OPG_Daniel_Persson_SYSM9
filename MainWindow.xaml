<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Width="auto" Height="auto" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username:" Margin="3"/>
            <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>

            <TextBlock Text="Password:" Margin="3"/>
            <!-- Later, switch to PasswordBox for security. -->
            <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>

            <StackPanel Orientation="Horizontal" Margin="0 21 0 0">
                <Button Content="Login" Command="{Binding TryLoginCommand}" 
                        Width="100" Height="30" Margin="3"/>
                <Button Content="Register" Command="{Binding OpenRegisterWindowCommand}" 
                        Width="100" Height="30" Margin="3"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
