<Window x:Class="CookMaster.Views.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecipeDetailWindow" Height="450" Width="800">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Right column: buttons -->
        <StackPanel Grid.Column="1" Margin="4,0,0,0">
            <Button Content="Add Recipe" Width="160" Height="30" Margin="4" 
                    ToolTip="Save changes and close the window"
                    Command="{Binding PerformAddCommand}"
                    Style="{StaticResource ButtonSaveStyle}"/>

            <Button Content="Cancel" Width="160" Height="30" Margin="4"
                    ToolTip="Close without saving changes"
                    Command="{Binding PerformCancelCommand}"
                    Style="{StaticResource ButtonLightGrayStyle}"/>
        </StackPanel>

        <!-- Left column: recipe details -->
        <StackPanel Grid.Column="0">
            <Label Content="Add New Recipe" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="Title" Margin="4"/>
            <TextBox Margin="4"
                     Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Ingredients" Margin="4"/>
            <ListBox ItemsSource="{Binding Ingredients}" Height="100" Margin="4"/>

            <TextBlock Text="Instructions" Margin="4"/>
            <TextBox Margin="4" Height="100"
                     Text="{Binding Instructions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Category" Margin="4"/>
            <ComboBox Margin="4"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</Window>
