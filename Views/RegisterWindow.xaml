<Window x:Class="CookMaster.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        xmlns:behaviors="clr-namespace:CookMaster.Behaviors"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="550" Width="800"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource {x:Type Window}}">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label Content="Register New User" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Text="Username" Margin="4"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
            <TextBlock Text="{Binding UsernameError}" Foreground="Red" Margin="4,4,0,0"/>

            <TextBlock Text="Email" Margin="4"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
            <TextBlock Text="{Binding EmailError}" Foreground="Red" Margin="4,4,0,0"/>

            <!-- Password input -->
            <TextBlock Text="Password" Margin="4"/>
            <PasswordBox Margin="4"
                         behaviors:PasswordBoxAssistant.BindPassword="True"
                         behaviors:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay}"/>

            <!-- Strength meter -->
            <StackPanel Margin="4">
                <UniformGrid Columns="4" HorizontalAlignment="Stretch" Margin="0,0,0,4">
                    <!-- Bar 1 -->
                    <Border Height="6" Margin="2,0" CornerRadius="3">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PasswordStrengthBar1}" Value="True">
                                        <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    <!-- Bar 2 -->
                    <Border Height="6" Margin="2,0" CornerRadius="3">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PasswordStrengthBar2}" Value="True">
                                        <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    <!-- Bar 3 -->
                    <Border Height="6" Margin="2,0" CornerRadius="3">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PasswordStrengthBar3}" Value="True">
                                        <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    <!-- Bar 4 -->
                    <Border Height="6" Margin="2,0" CornerRadius="3">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PasswordStrengthBar4}" Value="True">
                                        <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </UniformGrid>

                <!-- Strength label -->
                <TextBlock Text="{Binding PasswordStrengthText}"
                           Foreground="{Binding PasswordStrengthBrush}"
                           FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Text="Confirm Password" Margin="4"/>
            <PasswordBox Margin="4"
                         behaviors:PasswordBoxAssistant.BindPassword="True"
                         behaviors:PasswordBoxAssistant.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay}"/>

            <!-- PasswordsMatch-->
            <TextBlock Text="{Binding PasswordMatchMessage}"
                       Foreground="{Binding PasswordMatchBrush}"
                       Visibility="{Binding ShowPasswordMatchMessage, Converter={StaticResource BoolToVis}}"
                       Margin="4"/>
            
            <TextBlock Text="Country" Margin="4"/>
            <ComboBox Margin="4"
                      ItemsSource="{Binding Countries}"
                      SelectedItem="{Binding User.Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Security Question" Margin="4"/>
            <TextBox Text="{Binding SecurityQuestion, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>

            <TextBlock Text="Security Answer" Margin="4"/>
            <TextBox Text="{Binding SecurityAnswer, UpdateSourceTrigger=PropertyChanged}" Margin="4"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Button Content="Register" Width="160" Height="30" Margin="4" 
                    ToolTip="Register a new user"
                    Command="{Binding PerformRegisterCommand}"
                    Style="{StaticResource ButtonSaveStyle}"/>
            <Button Content="Cancel" Width="160" Height="30"
                    ToolTip="Cancel registration"
                    Command="{Binding PerformCancelCommand}"
                    Style="{StaticResource ButtonLightGrayStyle}"/>
        </StackPanel>
    </Grid>
</Window>
