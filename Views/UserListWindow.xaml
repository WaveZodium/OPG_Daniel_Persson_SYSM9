<Window x:Class="CookMaster.Views.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserListWindow" Height="550" Width="800"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource {x:Type Window}}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Image Source="{StaticResource SteamingPotImage}" HorizontalAlignment="Center"
           Width="30" Height="30" Stretch="Uniform" Margin="0,0,0,0"/>
            <TextBlock Text="Users List" FontSize="20" FontWeight="Bold" Margin="4" />
        </StackPanel>

        <!-- Right column: buttons -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Margin="4,0,0,0">
            <Button Content="Add User" Width="160" Height="30" Margin="4" 
                    ToolTip="Add a new user"
                    Command="{Binding PerformAddUserCommand}"/>
            <Button Content="View User" Width="160" Height="30" Margin="4" 
                    ToolTip="View selected user"
                    Command="{Binding PerformViewUserCommand}"/>
            <Button Content="Delete User" Width="160" Height="30" Margin="4" 
                    ToolTip="Delete selected user"
                    Command="{Binding PerformDeleteUserCommand}"
                    Style="{StaticResource ButtonDangerStyle}"/>
            <Button Content="Close" Width="160" Height="30" Margin="4" 
                    ToolTip="Close the window"
                    Command="{Binding PerformCloseCommand}"
                    Style="{StaticResource ButtonSaveStyle}"/>
        </StackPanel>

        <!-- Left column: user list -->
        <StackPanel Grid.Row="2" Grid.Column="0">
            <Label Content="User List" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <DataGrid Grid.Row="2" Grid.Column="0" ItemsSource="{Binding Users}" 
                      SelectedItem="{Binding SelectedUser}" 
                      AutoGenerateColumns="False" 
                      Height="auto" Margin="0,0,0,0"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="User" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
