<Window x:Class="CookMaster.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="RecipeListWindow" Height="450" Width="800">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Left column: username + buttons -->
        <StackPanel Grid.Column="1" Margin="4,0,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Logged in as:" VerticalAlignment="Center" Margin="4" />
                <TextBlock Text="{Binding LoggedInUserName}" FontWeight="Bold" Margin="4" VerticalAlignment="Center" />
            </StackPanel>

            <Button Content="Logout" Command="{Binding TryLogoutCommand}" 
                    Width="160" Height="30" Margin="4, 4, 4, 21"
                    Background="LightYellow"
                    Style="{StaticResource HoverCursorButtonStyle}"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVis}}"/>
            
            <Button Content="Add Recipe" Command="{Binding OpenAddRecipeWindowCommand}" 
                    Width="160" Height="30" Margin="4"
                    Style="{StaticResource HoverCursorButtonStyle}"/>
            <Button Content="View Recipe" Command="{Binding OpenRecipeDetailWindowCommand}" 
                    Width="160" Height="30" Margin="4"
                    Style="{StaticResource HoverCursorButtonStyle}"/>
            <Button Content="List Users" Command="{Binding OpenUserListWindowCommand}" 
                    Width="160" Height="30" Margin="4"
                    Style="{StaticResource HoverCursorButtonStyle}"
                    Background="LightBlue"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>

        <!-- Right column: recipe list -->
        <DataGrid Grid.Column="0" ItemsSource="{Binding Recipes}" 
                  SelectedItem="{Binding SelectedRecipe}" 
                  AutoGenerateColumns="False" 
                  Height="380" Margin="0,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Recipe Name" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Created By" Binding="{Binding CreatedBy.Username}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
