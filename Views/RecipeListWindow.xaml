<Window x:Class="CookMaster.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="CookMaster - Recipe List" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource {x:Type Window}}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Image Source="{StaticResource SteamingPotImage}" HorizontalAlignment="Center"
                   Width="30" Height="30" Stretch="Uniform" Margin="0,0,0,0"/>
            <TextBlock Text="Recipe List" FontSize="20" FontWeight="Bold" Margin="4" />
        </StackPanel>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
        
            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="Logged in as:" Margin="0,0,0,3" />
                <TextBlock FontWeight="Bold">
                    <Hyperlink Command="{Binding OpenUserDetailsCommand}" ToolTip="View your details">
                        <Run Text="{Binding LoggedInUserName}" />
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8,0,0,0">
                <TextBlock FontSize="12" HorizontalAlignment="Right" TextAlignment="Center" Margin="3" 
                           Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVis}}">
                    <Hyperlink Command="{Binding TryLogoutCommand}">Logout</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Left column: recipe list -->
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <Grid Grid.Row="0" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,4,0">
                    <TextBlock Text="Filter By Title" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Height="35" Padding="2"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Type to search recipes by name, category, or owner"
                             Style="{StaticResource RoundedTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,4,0">
                    <TextBlock Text="Filter By Category" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Categories}" Height="35"
                              SelectedItem="{Binding SelectedCategory}"
                              ToolTip="Select a category to filter recipes"
                              Style="{StaticResource RoundedComboBoxStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,4,0">
                    <TextBlock Text="Filter By Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Margin="0" Padding="0"
                                Style="{StaticResource RoundedDatePickerStyle}"
                                ToolTip="Select a date to filter recipes created on or after this date"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,0,0" VerticalAlignment="Bottom">
                    <Button Content="Clear Filters" Height="33" Margin="0,0,0,2"
                            ToolTip="Clear all filters"
                            Command="{Binding ClearFiltersCommand}" 
                            Style="{StaticResource ButtonLightGrayStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Spacer -->
            <Border Grid.Row="1" Height="12" Background="Transparent"/>

            <!-- DataGrid with its own scrolling -->
            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding Recipes}" 
                      SelectedItem="{Binding SelectedRecipe}" 
                      AutoGenerateColumns="False" 
                      Margin="0"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.IsDeferredScrollingEnabled="True"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Created" Binding="{Binding Created, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="*"/>
                    <DataGridTextColumn Header="Recipe Name" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                    <DataGridTextColumn Header="Owner" Binding="{Binding Owner.Username}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Right column: username + buttons -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="4,0,0,0">
            <Button Content="Add Recipe" Width="160" Height="30" Margin="0,0,0,4"
                    ToolTip="Add a new recipe"
                    Command="{Binding OpenAddRecipeWindowCommand}" 
                    Style="{StaticResource ButtonLightGrayStyle}"/>
            <Button Content="Copy Recipe" Width="160" Height="30" Margin="0,4"
                    ToolTip="Copy the selected recipe"
                    Command="{Binding OpenCopyRecipeWindowCommand}" 
                    Style="{StaticResource ButtonLightGrayStyle}"/>
            <Button Content="View Recipe" Width="160" Height="30" Margin="0,4"
                    ToolTip="View details of the selected recipe"
                    Command="{Binding OpenRecipeDetailWindowCommand}" 
                    Style="{StaticResource ButtonLightGrayStyle}"/>
            <Button Content="Delete Recipe" Width="160" Height="30" Margin="4"
                    ToolTip="Delete this recipe"
                    Command="{Binding PerformDeleteCommand}" 
                    Style="{StaticResource ButtonDangerStyle}"/>
            <Button Content="List Users" Width="160" Height="30" Margin="0,4"
                    ToolTip="View the list of users"
                    Command="{Binding OpenUserListWindowCommand}"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"
                    Style="{StaticResource ButtonBlueStyle}"/>

            <StackPanel Orientation="Horizontal" Height="36" Margin="0,30,0,0"
                        ToolTip="Usage Information"
                        Cursor="Hand"
                        Focusable="True">
                <StackPanel.InputBindings>
                    <MouseBinding MouseAction="LeftClick"
                                  Command="{Binding OpenUsageInfoWindowCommand}" />
                </StackPanel.InputBindings>
                <Image Source="{StaticResource InfoIcon}"
                       Width="36" Height="36"
                       Stretch="Uniform"
                       VerticalAlignment="Center">
                </Image>
                <TextBlock Text="Usage Information"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
