<Window x:Class="CookMaster.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        xmlns:behaviors="clr-namespace:CookMaster.Behaviors"
        mc:Ignorable="d"
        Title="CookMaster - Forgot Password" Height="560" Width="800"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource {x:Type Window}}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Image Source="{StaticResource SteamingPotImage}" HorizontalAlignment="Center"
                   Width="30" Height="30" Stretch="Uniform" Margin="0,0,0,0"/>
            <TextBlock Text="Forgot Password" FontSize="20" FontWeight="Bold" Margin="4" />
        </StackPanel>

        <!-- Registration Form -->
        <ScrollViewer Grid.Row="2" Grid.Column="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="True">
            <StackPanel>
                <Grid Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Username" Margin="0, 4, 4, 4"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0, 4, 4, 4"
                                 behaviors:FocusBehavior.IsFocused="{Binding FocusUsername, Mode=TwoWay}"/>
                    </StackPanel>
                    <Button Grid.Column="1" VerticalAlignment="Bottom" Content="Load Security Question" Width="auto" Height="30" Margin="4" 
                            ToolTip="Load your security question"
                            Command="{Binding LoadSecurityQuestionCommand}"
                            Style="{StaticResource ButtonLightGrayStyle}"/>
                </Grid>

                <TextBlock Text="Security Question" Margin="4"/>
                <TextBox Text="{Binding SecurityQuestion, Mode=OneWay}" IsReadOnly="True" Margin="4"/>


                <Grid Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Security Answer" Margin="0, 4, 4, 4"/>
                        <TextBox Text="{Binding SecurityAnswer, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding CanEditFields}"
                                 Margin="0, 4, 4, 4"/>
                    </StackPanel>
                    <Button Grid.Column="1" VerticalAlignment="Bottom" Content="Check Security Answer" Width="auto" Height="30" Margin="4" 
                            ToolTip="Check your security answer"
                            Command="{Binding CheckSecurityAnswerCommand}"
                            Style="{StaticResource ButtonLightGrayStyle}"/>
                </Grid>

                <TextBlock Text="New Password" Margin="4"/>
                <PasswordBox Margin="4"
                             IsEnabled="{Binding CanEditPassword}"
                             behaviors:PasswordBoxAssistant.BindPassword="True"
                             behaviors:PasswordBoxAssistant.BoundPassword="{Binding NewPassword, Mode=TwoWay}"/>
                <!-- Strength meter -->
                <StackPanel Margin="4">
                    <UniformGrid Columns="4" HorizontalAlignment="Stretch" Margin="0,0,0,4">
                        <!-- Bar 1 -->
                        <Border Height="6" Margin="2,0" CornerRadius="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PasswordStrengthBar1}" Value="True">
                                            <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <!-- Bar 2 -->
                        <Border Height="6" Margin="2,0" CornerRadius="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PasswordStrengthBar2}" Value="True">
                                            <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <!-- Bar 3 -->
                        <Border Height="6" Margin="2,0" CornerRadius="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PasswordStrengthBar3}" Value="True">
                                            <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <!-- Bar 4 -->
                        <Border Height="6" Margin="2,0" CornerRadius="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PasswordStrengthBar4}" Value="True">
                                            <Setter Property="Background" Value="{Binding PasswordStrengthBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </UniformGrid>

                    <!-- Strength label -->
                    <TextBlock Text="{Binding PasswordStrengthText}"
               Foreground="{Binding PasswordStrengthBrush}"
               FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="Confirm New Password" Margin="4"/>
                <PasswordBox Margin="4"
                             IsEnabled="{Binding CanEditPassword}"
                             behaviors:PasswordBoxAssistant.BindPassword="True"
                             behaviors:PasswordBoxAssistant.BoundPassword="{Binding ConfirmNewPassword, Mode=TwoWay}"/>

                <!-- PasswordsMatch-->
                <TextBlock Text="{Binding PasswordMatchMessage}"
                           Foreground="{Binding PasswordMatchBrush}"
                           Visibility="{Binding ShowPasswordMatchMessage, Converter={StaticResource BoolToVis}}"
                           Margin="4"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3">
            <Button Content="Change Password" Width="160" Height="30" Margin="4" 
                    ToolTip="Change your password"
                    Command="{Binding PerformUpdatePasswordCommand}"
                    Style="{StaticResource ButtonSaveStyle}"/>
            <Button Content="Cancel" Width="160" Height="30"
                    ToolTip="Cancel password change"
                    Command="{Binding PerformCancelCommand}"
                    Style="{StaticResource ButtonLightGrayStyle}"/>
        </StackPanel>
    </Grid>
</Window>
