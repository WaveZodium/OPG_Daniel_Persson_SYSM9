<Window x:Class="CookMaster.Views.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="RecipeDetailWindow" Height="450" Width="800">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Right column: buttons -->
        <StackPanel Grid.Column="1" Margin="4,0,0,0">
            <Button Content="Save" Command="{Binding PerformSaveCommand}" Width="160" Height="30" Margin="4"/>
            <Button Content="If Admin: Delete" Width="160" Height="30" Margin="4"
                Background="Red"
                Command="{Binding PerformDeleteCommand}" 
                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Close" Command="{Binding PerformCloseCommand}" Width="160" Height="30" Margin="4"/>
        </StackPanel>

        <!-- Left column: recipe details -->
        <StackPanel HorizontalAlignment="Left">
            <Label Content="Recipe Details Here" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="Title" Margin="10"/>
            <TextBox Width="200" Height="30" Margin="10"
                     Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
    
</Window>
