<Window x:Class="CookMaster.Views.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="CookMaster - User Details" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource {x:Type Window}}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Image Source="{StaticResource SteamingPotImage}" HorizontalAlignment="Center"
                   Width="30" Height="30" Stretch="Uniform" Margin="0,0,0,0"/>
            <TextBlock Text="User Details" FontSize="20" FontWeight="Bold" Margin="4" />
        </StackPanel>

        <!-- Right column: buttons -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Margin="4,0,0,0">
            <Button Content="Save" Width="160" Height="30" Margin="4"
                    ToolTip="Save changes"
                    Command="{Binding PerformSaveCommand}"
                    Style="{StaticResource ButtonSaveStyle}"/>
            <Button Content="Close" Width="160" Height="30" Margin="4"
                    ToolTip="Close without saving changes"
                    Command="{Binding PerformCloseCommand}"
                    Style="{StaticResource ButtonLightGrayStyle}"/>
        </StackPanel>

        <!-- Left column: user details -->
        <ScrollViewer Grid.Row="2" Grid.Column="0"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              CanContentScroll="True">
            <StackPanel>
                <TextBlock Text="Username" Margin="4" FontWeight="DemiBold"/>

                <!-- Editable for admins -->
                <TextBox Margin="4"
                         Text="{Binding User.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdmin}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Read-only display for non-admins -->
                <TextBlock Margin="4"
                           Text="{Binding User.Username}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdmin}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Email" Margin="4,12,4,4" FontWeight="DemiBold"/>
                <TextBox Margin="4"
                         Text="{Binding User.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Country" Margin="4,12,4,4" FontWeight="DemiBold"/>
                <ComboBox Margin="4"
                          ItemsSource="{Binding Countries}"
                          SelectedItem="{Binding User.Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Security Question" Margin="4,12,4,4" FontWeight="DemiBold"/>
                <TextBox Margin="4"
                         Text="{Binding User.SecurityQuestion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Security Answer" Margin="4,12,4,4" FontWeight="DemiBold"/>
                <TextBox Margin="4"
                         Text="{Binding User.SecurityAnswer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Hide Role for non-admins -->
                <StackPanel Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Role" Margin="4,12,4,4" FontWeight="DemiBold"/>
                    <ComboBox Margin="4"
                              ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding User.Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
