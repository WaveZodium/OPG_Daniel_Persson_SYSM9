<Window x:Class="CookMaster.Dialogs.UnsavedChangesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="Unsaved Changes" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource {x:Type Window}}">
    <StackPanel Margin="20">
        <TextBlock Text="You have unsaved changes. What would you like to do?" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save &amp; Close" Width="100" Margin="4" IsDefault="True"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource ButtonSaveStyle}"/>
            <Button Content="Discard" Width="80" Margin="4"
                    Command="{Binding DiscardCommand}"
                    Style="{StaticResource ButtonDangerStyle}"/>
            <Button Content="Cancel" Width="80" Margin="4" IsCancel="True"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource ButtonLightGrayStyle}"/>
        </StackPanel>
    </StackPanel>
</Window>

