<Application x:Class="CookMaster.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- app-wide shared resources -->
                <ResourceDictionary Source="Resources/SharedResources.xaml"/>
                
                <!-- make the SteamingPot drawing available everywhere -->
                <ResourceDictionary Source="Resources/SteamingPot.xaml"/>
                <ResourceDictionary Source="Resources/InfoIcon.xaml"/>
                <ResourceDictionary Source="Resources/LogoutIcon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
